{
    "name": "Company Crawler",
    "version": "1.0.0",
    "description": "an extension that adds a context menu that enables you to look up a company's reviews easily.",
    "manifest_version": 3,
    "author": "Qhotti",
    "action":{
        "default_title": "Company Crawler",
        "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus"
      ],
    "icons": {
      "16": "logo-16.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
      },
    "background": {
      "service_worker": "script.js"
    }
}